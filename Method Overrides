   SELECT * FROM comments LEFT JOIN users ON users.id = comments.user_id

   or SELECT comments.*


   TRIPLE JOIN

   SELECT * FROM users LEFT JOIN blogs ON posts.user_id = users.id LEFT JOIN comments;